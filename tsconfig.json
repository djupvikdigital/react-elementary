{
  "compilerOptions": {
    "outDir": "lib",
    "declaration": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es2017",
    "types": [
      "mocha",
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "**/*.test.ts"
  ]
}
